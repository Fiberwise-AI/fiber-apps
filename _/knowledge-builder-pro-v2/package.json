{
  "name": "knowledge-builder-pro-v2",
  "version": "2.0.0",
  "description": "Advanced knowledge building app with modular pipeline architecture using Wikipedia API, web scraping, and conversational analysis",
  "main": "index.js",
  "keywords": [
    "knowledge-building",
    "research",
    "wikipedia",
    "web-scraping",
    "ai-agents",
    "pipelines",
    "fiberwise"
  ],
  "author": "FiberWise Platform",
  "license": "MIT",
  "dependencies": {
    "@fiberwise/sdk": "^1.0.0",
    "playwright": "^1.40.0",
    "axios": "^1.6.0"
  },
  "scripts": {
    "start": "node index.js",
    "test": "node test.js",
    "test-connectivity": "node -e \"require('./index.js').testConnectivity().then(console.log)\"",
    "list-components": "node -e \"require('./index.js').getAvailableComponents().then(console.log)\""
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "fiberwise-apps/knowledge-builder-pro-v2"
  },
  "fiberwise": {
    "app_type": "research_pipeline",
    "version": "2.0.0",
    "architecture": "modular_steps",
    "components": {
      "functions": [
        "functions/wikipedia_api_scraper.py",
        "functions/synthesize_knowledge.py"
      ],
      "agents": [
        "agents/playwright_scraper_agent.py",
        "agents/research_coordinator_agent.py",
        "agents/domain_expert_agent.py",
        "agents/hypothesis_agent.py",
        "agents/data_processor_agent.py"
      ],
      "pipelines": [
        "pipeline/main.py"
      ],
      "pipeline_steps": [
        "pipeline/steps/wikipedia_research_step.py",
        "pipeline/steps/web_scraping_step.py",
        "pipeline/steps/data_extraction_step.py",
        "pipeline/steps/data_transformation_step.py",
        "pipeline/steps/data_analysis_step.py",
        "pipeline/steps/data_validation_step.py",
        "pipeline/steps/research_coordination_step.py",
        "pipeline/steps/domain_expert_step.py",
        "pipeline/steps/hypothesis_testing_step.py",
        "pipeline/steps/knowledge_synthesis_step.py"
      ],
      "ui_components": [
        "components/knowledge-builder-pro.js"
      ]
    },
    "capabilities": [
      "wikipedia_research",
      "web_scraping",
      "knowledge_synthesis",
      "conversational_analysis",
      "data_processing",
      "research_validation",
      "modular_steps",
      "schema_validation"
    ],
    "dependencies": {
      "shared_libraries": [
        "fiberwise-common/pipeline_steps"
      ]
    }
  }
}